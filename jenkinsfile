pipeline {
  agent any

  stages {
    stage('Clone Repository') {
      steps {
        git url: 'https://github.com/Kuzan0069/docker-node.git', branch: 'master'
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          sh 'docker build -t practiceproject-webapp .'
        }
      }
    }

    stage('Run Docker Container') {
      steps {
        script {
          sh '''
            docker rm -f practiceproject-webapp-1 || true
            docker run -d -p 3000:3000 --name practiceproject-webapp-1 practiceproject-webapp
          '''
        }
      }
    }
  }

  post {
    always {
      echo 'Pipeline finished.'
    }
  }
}
